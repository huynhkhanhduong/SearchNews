<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>News Search</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
  <h1 class="mb-4">Search News</h1>
  
  <form action="/search" method="POST" class="mb-4">
    <div class="mb-3">
      <input type="text" name="title" placeholder="Enter news title" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>

  <h2>Results:</h2>
  
  <% if (typeof searchTime !== 'undefined') { %>
    <p><strong>Search Time:</strong> <%= searchTime %> ms</p>
  <% } %>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Summary</th>
        <th>Content</th>  
      </tr>
    </thead>
    <tbody>
      <% if (results && results.length > 0) { %>
        <% results.forEach(tintuc => { %>
          <tr>
            <td><%= tintuc.id %></td>
            <td><%= tintuc.title %></td>
            <td><%= tintuc.summary %></td>  
            <td><%= tintuc.content %></td>  
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="4">No results found.</td> 
        </tr>
      <% } %>
    </tbody>
  </table>
  

</body>
</html>
